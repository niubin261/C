void DestroyStr(char*str)
{
	free(str);
}
void StrDelete(char*str, int local)
{
	int len = StrLenght(str);
	if (local>len || local<0)
	{
		return;
	}
	int i = local;
	while (str[i] != '\0')
	{
		str[i - 1] = str[i];
		i++;



	}
	str[i - 1] = str[i];
}
